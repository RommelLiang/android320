<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.tiemuyu.chuanchuan.activity.OrderActivity">

    <RelativeLayout
        android:id="@+id/rl_heand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/address_tishi">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/home_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_marginBottom="40dp"
        android:layout_below="@id/rl_heand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_activity_basic_info_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/im_one"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:background="@drawable/shape_point_gray" />

                <View
                    android:id="@+id/view_one"
                    android:layout_width="50dp"
                    android:layout_height="3px"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/im_one"
                    android:background="@color/colorLineGrey" />

                <ImageView
                    android:id="@+id/im_two"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_toRightOf="@id/view_one"
                    android:background="@drawable/shape_point_gray" />

                <View
                    android:id="@+id/view_two"
                    android:layout_width="50dp"
                    android:layout_height="3px"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/im_two"
                    android:background="@color/colorLineGrey" />

                <ImageView
                    android:id="@+id/im_three"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_toRightOf="@id/view_two"
                    android:background="@drawable/shape_point_gray" />

                <View
                    android:id="@+id/view_three"
                    android:layout_width="50dp"
                    android:layout_height="3px"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/im_three"
                    android:background="@color/colorLineGrey" />

                <ImageView
                    android:id="@+id/im_four"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_toRightOf="@id/view_three"
                    android:background="@drawable/shape_point_gray" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_jindu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_activity_basic_info_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未付款" />

                <TextView
                    android:id="@+id/tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:text="已付款" />

                <TextView
                    android:id="@+id/tv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:text="已发货" />

                <TextView
                    android:id="@+id/tv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:text="已完成" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_jindu"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/consignee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="收货人："
                        android:textColor="#8f8f8f"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/consignee"
                        android:text="黄颖颖"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35dp"
                        android:layout_toRightOf="@+id/name"
                        android:text="135844184843"
                        android:textColor="#666666"
                        android:textSize="16sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="地址："
                        android:textColor="#8f8f8f"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/addressnext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/address"
                        android:text="广东省深圳市福田区商报路10号12栋601"
                        android:textColor="#666666"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/ll_shade"
                android:layout_below="@id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/address_tishi" />

            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_below="@id/ll_shade"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_order_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="￥ 532"
                        android:textColor="@color/ColorNavBackground"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_miaoshu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toStartOf="@+id/tv_price"
                        android:text="会撒娇考古发掘第三个卡德加鬼斧神工的风格环岛赛股份"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_conut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_price"
                        android:layout_marginRight="15dp"
                        android:text="x1"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/view_shade"
                android:layout_marginTop="5dp"
                android:layout_below="@id/ll_detail"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/address_tishi" />

            <RelativeLayout
                android:id="@+id/rl_coin"
                android:layout_below="@id/view_shade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="使用穿币" />

                <TextView
                    android:id="@+id/tv_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="50" />
            </RelativeLayout>

            <View
                android:id="@+id/view_coin"
                android:layout_below="@id/rl_coin"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/address_tishi" />

            <RelativeLayout
                android:id="@+id/rl_yunfei"
                android:layout_below="@id/view_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="运费" />

                <TextView
                    android:id="@+id/tv_yunfei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="50" />
            </RelativeLayout>

            <View
                android:id="@+id/view_yunfei"
                android:layout_below="@id/rl_yunfei"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/address_tishi" />

            <RelativeLayout
                android:id="@+id/rl_money"
                android:layout_below="@id/view_yunfei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="实付款" />

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="50" />
            </RelativeLayout>

            <View
                android:id="@+id/view_money"
                android:layout_below="@id/rl_money"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/address_tishi" />

            <RelativeLayout
                android:layout_below="@id/view_money"
                android:id="@+id/rl_dingzhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="快递信息"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/im_must_know"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/home_down" />
            </RelativeLayout>


            <com.tiemuyu.chuanchuan.activity.view.MyListView
                android:listSelector="@drawable/timer_list_selector"
                android:divider="#00000000"
                android:layout_below="@id/rl_dingzhi"
                android:id="@+id/lv_jindu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_kefu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/ColorNavBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="联系客服"
            android:textColor="@color/address_tishi"
            android:textSize="15dp" />
    </RelativeLayout>
</RelativeLayout>
