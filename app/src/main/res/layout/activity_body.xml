                    >
                    <TextView
                        android:id="@+id/kuchang_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="裤长"
                        android:textColor="#571332"
                        android:textSize="16sp"
                        android:layout_marginRight="5dp"
