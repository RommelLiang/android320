                        android:layout_toLeftOf="@+id/kuchang" />

                    <EditText
                        android:inputType="number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="0"
                        android:textColor="#571332"
                        android:id="@+id/kuchang"
                        android:textSize="17sp"
                        android:layout_marginRight="30dp"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/relativeLayout"
                    android:layout_alignBottom="@+id/relativeLayout"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/datuiwei_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大腿围"
                        android:textColor="#571332"
                        android:textSize="16sp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="20dp"
                        android:layout_toLeftOf="@+id/datuiwei"
                        />
                    <EditText
                        android:inputType="number"
                        android:id="@+id/datuiwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="0"
                        android:textColor="#571332"
                        android:textSize="17sp"
                        android:layout_marginRight="30dp"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/edit_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:textColor="@color/colorBlack"
                    android:textSize="17sp"
                    android:background="@drawable/bodys" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorLightWhite"
                android:layout_marginTop="30dp"
                android:layout_height="17dp"
                ></LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_jiaocheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:id="@+id/jiaochengs"
                    android:textSize="18sp"
                    android:src="@drawable/jiantou"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自助量体教程"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/jiaocheng"
                    android:layout_gravity="center_vertical"
