<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/address_tishi">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/home_back" />
        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置支付密码"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/rl_head"
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择支付方式"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:textSize="15sp"
        android:textColor="#6d6d6d"
        />




    <LinearLayout

        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:gravity="right"
            android:id="@+id/xuzhifu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="需支付："
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/xuzhifu"
            android:text="￥532.00"
            android:textColor="#93084b"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ps_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/okorder"
            android:text="确认支付"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/select"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textColor="#353535"
            android:textSize="21sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ps_zhifubao"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/ps_zhifubao"
            android:src="@drawable/zhifubao_true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/iv_zhifubao"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/noselect"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_lingqian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#353535"
            android:textSize="21sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/zhifubao"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/zhifubao"
            android:src="@drawable/zhifubao"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/iv_ling"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/noselect"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</RelativeLayout>
