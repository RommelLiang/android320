<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <com.tiemuyu.chuanchuan.activity.view.CircleImageView
                android:id="@+id/search_usr_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src ="@drawable/a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是普京大帝"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView7" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/ColorSearchPlacehodler"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/search_result_img"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/c"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/search_pro_name"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:textSize="14sp"
                android:text="女装2017年高级聚酯纤维单层长袖中长款衬衣"
                android:layout_alignTop="@+id/search_result_img"
                android:layout_toEndOf="@+id/search_result_img" />

            <TextView
                android:id="@+id/search_pro_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1121"
                android:textSize="13sp"
                android:layout_alignTop="@+id/search_pro_name"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorRed"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>
    
</LinearLayout>