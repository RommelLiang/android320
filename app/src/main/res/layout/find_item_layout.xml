<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/find_first_article_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/find_item_ttl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="法国订单高品质龙骨蕾丝"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/find_main_pic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_marginLeft="10dp"
                android:id="@+id/desp_txt"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="来自米兰蕾丝大王PIZVAL的客供面料超好看的东西买不买随你"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/view_num_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2011"
                android:textSize="14sp"
                android:textColor="@color/colorLightGrey"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/view_num_txt"
                android:src="@drawable/find_view_num"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>