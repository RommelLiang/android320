<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <ImageView
                android:id="@+id/header_big_img"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="210dp" />

            <TextView
                android:id="@+id/header_img_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我是一个兵，来自老百姓，革命战争考验了我，立场更坚定。哦嘿嘿枪杆握得紧，眼睛看得清"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id                 = "@+id/rl_header_search"
            android:layout_width       = "wrap_content"
            android:layout_height      = "33dp"
            android:layout_marginTop   = "15dp"
            android:background         = "@drawable/edit"
            android:orientation        = "horizontal"
            android:visibility         = "visible">

            <EditText
                android:id                      = "@+id/find_topic_header_serach_txt"
                android:layout_width            = "match_parent"
                android:layout_height           = "match_parent"
                android:background              = "@color/colorLightGrey"
                android:imeOptions              = "actionSearch"
                android:inputType               = "text"
                android:hint                    = "搜你想要"
                android:textSize                = "15sp"
                android:paddingLeft             = "38dp"
                android:layout_marginRight      = "55dp"
                android:layout_marginLeft       = "10dp"
                android:layout_alignParentTop   = "true"
                android:layout_alignParentStart = "true" />

            <ImageView
                android:id                = "@+id/find_topic_header_search_img"
                android:background        = "@mipmap/search"
                android:layout_height     = "22dp"
                android:layout_width      = "22dp"
                android:layout_gravity    = "center_vertical"
                android:layout_marginLeft = "15dp"
                android:layout_marginTop  = "6dp"/>

            <TextView
                android:id                      = "@+id/search_btn"
                android:layout_width            = "40dp"
                android:layout_height           = "wrap_content"
                android:text                    = "搜索"
                android:textSize                = "17sp"
                android:layout_centerVertical   = "true"
                android:layout_alignParentRight = "true"
                android:layout_marginRight      = "5dp"/>

        </RelativeLayout>

        <HorizontalScrollView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_search_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>