<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightWhite"
    android:orientation="vertical"

    android:weightSum="1">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="203dp"
        android:background="@drawable/beijing">


        <com.tiemuyu.chuanchuan.activity.chat_tools.view.CircleImageView
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/circle_logo"
            android:layout_gravity="center"
            android:id="@+id/imageView"
            android:layout_marginTop="48dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击登录"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView"
            android:layout_alignTop="@+id/textView4" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginBottom="18dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mine_orderhdpi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="#353535"
                android:text="我的订单"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:id="@+id/mf_shaitu"
            android:layout_weight="1"        >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mine_imgehdpi"
                android:id="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="#353535"
                android:text="我的晒图"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:id="@+id/purse"
            android:orientation="vertical"
            android:layout_weight="1"        >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mine_moneyhdpi"
                android:id="@+id/imageView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="#353535"
                android:text="我的钱包"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:id="@+id/mf_saveitem"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mine_collectionhdpi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center|center_horizontal"
                android:textColor="#353535"
                android:text="我的收藏"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="228dp"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:weightSum="1"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/body"
            >

            <TextView
                android:layout_width="321dp"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:textColor="#353535"
                android:text="身体数据"
                android:id="@+id/shentishuju"
                android:layout_marginTop="12dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1.10" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/jiantou"
                android:id="@+id/shentishuju2"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/document"
            >
            <TextView
                android:layout_width="321dp"
                android:layout_height="50dp"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:textColor="#353535"
                android:text="基本资料"
                android:id="@+id/jibenziliao"
                android:background="@color/colorWhite"
                android:paddingTop="17dp"
                android:layout_marginTop="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1.04" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/jiantou"
                android:id="@+id/jibenziliao2"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/mf_invitefriend"

            >
            <TextView
                android:layout_width="321dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#353535"
                android:text="邀请好友"
                android:id="@+id/yaoqinghaoyou"
                android:textSize="18dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="6dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.07" />
            <ImageView
                android:layout_width="42dp"
                android:layout_height="30dp"
                android:src="@drawable/jiantou"
                android:id="@+id/yaoqinghaoyou2"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/mf_aboutme"
            >
            <RelativeLayout
                android:layout_marginTop="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1.06"
                android:layout_width="321dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:text="关于我们"
                    android:textColor="#353535"
                    android:id="@+id/guanyuwomen"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:text=" New "
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/guanyuwomen"
                    android:id="@+id/is_new_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapeselect_total"
                    android:padding="1dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                  />
            </RelativeLayout>

            <ImageView
                android:layout_width="46dp"
                android:layout_height="30dp"
                android:src="@drawable/jiantou"
                android:id="@+id/guanyuwm2"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="-3dp"

        >
    </LinearLayout>

</LinearLayout>
