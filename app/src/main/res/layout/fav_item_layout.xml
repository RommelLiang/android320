<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:background="@color/colorLightGrey"></LinearLayout>

    <RelativeLayout

        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="108dp">

        <!--注意：不能在imageview的xml里面设置默认的background-->
        <ImageView
            android:id="@+id/fav_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <!--android:background="@drawable/a"-->

        <TextView
            android:id="@+id/fav_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥5321"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/colorNewPrice"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/dlt_fav"
            android:background="@drawable/pay_btn_style"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="删除"
            android:textSize="14sp"
            android:textColor="@color/colorNewPrice"
            android:layout_marginRight="8dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="true"
             />

        <TextView
            android:layout_toLeftOf="@+id/fav_pic"
            android:id="@+id/fav_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="14sp"
            android:text="女装2017年高级聚酯纤维单层长袖中长款衬衣"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/fav_price"
            android:layout_alignBottom="@+id/fav_price"
            android:layout_toEndOf="@+id/fav_pic" />

        <TextView
            android:id="@+id/fav_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-11-19 14:53:07"
            android:layout_marginRight="8dp"
            android:layout_alignBottom="@+id/fav_pic"
            android:layout_alignStart="@+id/fav_name" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

</LinearLayout>