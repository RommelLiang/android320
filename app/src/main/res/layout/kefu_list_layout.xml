<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="25dp"
    >

    <com.tiemuyu.chuanchuan.activity.chat_tools.view.CircleImageView
        android:id="@+id/hear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/icon"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="降低可"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/hear"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:visibility="visible"
        android:textColor="#5a5a5a"
        android:lines="1"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_gravity="center_vertical"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/message_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/main_kfbtn"
        android:background="@drawable/shapeselect_total"
        android:gravity="center"
        android:layout_alignBaseline="@+id/hear"
        android:maxWidth="25dp"
        android:minWidth="20dp"
        android:padding="2dp"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical|right"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="降低可"
        android:visibility="gone"
        android:layout_below="@+id/message_total"
        android:layout_alignRight="@+id/message_total"
        android:layout_alignBaseline="@+id/content"
        android:textSize="12sp"/>


</RelativeLayout>