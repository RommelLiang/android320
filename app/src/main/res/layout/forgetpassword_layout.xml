<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_forget_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tiemuyu.chuanchuan.activity.new_activities.LoginActivity"
    android:background="@drawable/bkgrd_login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:id="@+id/header">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/white_return" />

        <TextView
            android:id="@+id/fp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:text="忘记密码"
            android:layout_alignTop="@+id/goBack"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!--header之下的所有内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <!--穿穿的透明logo-->
        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="85dp"
            android:src="@drawable/login_logohdpi"
            android:layout_gravity="center_horizontal"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:layout_weight="0.09" />

        <!--账户名输入框-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/forget_lay">
            <TextView
                android:id="@+id/fp_phone_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="手机号" />

            <EditText
                android:id="@+id/fp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入手机号码"
                android:maxLength="50"
                android:textColor="@color/white"
                android:textColorHint="@color/colorLightWhite"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/fp_phone_new" />

            <View
                android:layout_below="@id/fp_name"
                android:layout_height="1dp"
                android:background="@color/colorLightWhite"
                android:layout_width="fill_parent">
            </View>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/forget_lay1"
            android:visibility="gone">
            <TextView
                android:id="@+id/fp_phone_new1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="输入密码" />

            <EditText
                android:id="@+id/fp_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入新的密码"
                android:maxLength="50"
                android:textColor="@color/white"
                android:textColorHint="@color/colorLightWhite"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/fp_phone_new1" />

            <View
                android:layout_below="@id/fp_name1"
                android:layout_height="1dp"
                android:background="@color/colorLightWhite"
                android:layout_width="fill_parent">
            </View>

        </RelativeLayout>


        <!--密码输入框-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/zhuce_lay2"
            android:visibility="gone" >

            <TextView
                android:id="@+id/reg_pswd_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="验证码" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/white"
                android:textColorHint="@color/colorLightWhite"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/reg_pswd_new" />

            <View
                android:layout_below="@id/login_password"
                android:layout_height="1dp"
                android:background="@color/colorLightWhite"
                android:layout_width="fill_parent">
            </View>

        </RelativeLayout>

        <!--重新填写密码输入框-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/fp_lay3"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/fp_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="重填密码" />

            <EditText
                android:id="@+id/fp_password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="重新输入你的密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/white"
                android:textColorHint="@color/colorLightWhite"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/fp_password" />

            <View
                android:layout_below="@id/fp_password2"
                android:layout_height="1dp"
                android:background="@color/colorLightWhite"
                android:layout_width="fill_parent">
            </View>

        </RelativeLayout>


        <!--验证码输入-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/fp_lay4"
            >
            <!--android:visibility="gone"-->
            <TextView
                android:id="@+id/reg_yanzheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="验证码" />

            <EditText
                android:hint="请输入验证码"
                android:id="@+id/fpcode_yanzheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/white"
                android:textColorHint="@color/colorLightWhite"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/reg_yanzheng" />


            <TextView
                android:id="@+id/forget_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_below="@id/reg_yanzheng"
                android:layout_height="1dp"
                android:background="@color/colorLightWhite"
                android:layout_width="fill_parent">
            </View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fp_lay5">

            <Button
                android:id="@+id/fp_next"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="55dp"
                android:text="下一步"
                android:background="@drawable/shape"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/proc_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/fp_next"
                android:textSize="16sp"
                android:textColor="#CBAC5B"
                android:layout_centerInParent="true"
                android:text="已同意《用户注册协议》"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fp_lay6"
            >
            <!--android:visibility="gone"-->

            <Button
                android:id="@+id/fp_finish"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="55dp"
                android:text="完成"
                android:background="@drawable/shape"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:visibility="gone"/>



        </RelativeLayout>


    </LinearLayout>

</LinearLayout>