<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="350dp"
    android:background="@color/white"
    android:orientation="vertical">

    <!--android:background="@color/white"-->

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="180dp"
        android:layout_height="310dp"
        android:background="@color/white"
        android:orientation="vertical">

        <!--android:background="@color/white"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/shaitu_main_pic"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_margin="10dp"
            android:background="@drawable/icon_morentupian2"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">

            <com.tiemuyu.chuanchuan.activity.chat_tools.view.CircleImageView
                android:id="@+id/shaitu_usr_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/circle_logo"
                android:layout_gravity="center" />
            
            <TextView
                android:id="@+id/shaitu_usr_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="7dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:text="我是小豆豆"/>

            <Button
                android:id="@+id/chakandingzhi_btn"
                android:layout_width="66dp"
                android:layout_height="18dp"
                android:text="查看定制"
                android:background="@drawable/pay_btn_style"
                android:textColor="@color/ColorNavBackground"
                android:layout_gravity="center_vertical"
                android:textSize="11sp"/>
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>