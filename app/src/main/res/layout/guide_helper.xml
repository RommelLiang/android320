<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_all"
        android:background="#a0000000"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/im_one"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/dingzhichengpinhdpi"
                android:layout_marginTop="420dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="8"
            android:layout_marginBottom="60dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="10dp"/>
            <ImageView
                android:id="@+id/im_two"
                android:layout_marginRight="10dp"
                android:src="@drawable/fatuxunjiahdpi"
                android:layout_marginTop="380dp"
                android:layout_width="150dp"
                android:layout_height="120dp" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="180dp"
                android:layout_height="150dp" />
        </LinearLayout>
        <ImageView
            android:visibility="gone"
            android:id="@+id/im_three"
            android:src="@drawable/knowhdpi"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:weightSum="8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <View
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/im_four"
                android:src="@drawable/findmore"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="100dp" />
        </LinearLayout>
        <ImageView
            android:layout_marginTop="85dp"
            android:id="@+id/im_five"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/dingzhi"
            android:layout_width="200dp"
            android:layout_height="120dp" />
    </RelativeLayout>

</LinearLayout>