<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:background="@android:color/white"
        android:id="@+id/segmentTabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tl:tl_textAllCaps="true"
        tl:tl_indicator_color="@color/colorNewPrice"
        tl:tl_indicator_height="1.5dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_padding="15dp"
        tl:tl_tab_space_equal="true"
        tl:tl_underline_height="1dp"
        tl:tl_textsize="16dp"
        tl:tl_underline_color="@android:color/white"
        tl:tl_textSelectColor="@color/colorNewPrice"
        tl:tl_textUnselectColor="@color/colorSomber"/>
   <!-- <ImageView
        android:id="@+id/im_edit"
        android:layout_marginLeft="-50dp"
        android:padding="5dp"
        android:layout_toRightOf="@id/segmentTabLayout"
        android:layout_width="50dp"
        android:layout_height="40dp"/>
    <View
        android:layout_marginTop="-1.5dp"
        android:background="@android:color/white"
        android:layout_below="@id/im_edit"
        android:layout_marginLeft="-40dp"
        android:padding="5dp"
        android:layout_toRightOf="@id/segmentTabLayout"
        android:layout_width="40dp"
        android:layout_height="1dp"/>-->
    <android.support.v4.view.ViewPager
        android:background="@android:color/white"
        android:layout_below="@id/segmentTabLayout"
        android:layout_marginTop="5dp"
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
