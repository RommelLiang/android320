<resources>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/branded_launch_screens</item>
        <item name="colorPrimary">@color/ColorLaunchBackground</item>
        <item name="colorPrimaryDark">@color/ColorLaunchBackground</item>
        <item name="colorAccent">@color/ColorLaunchBackground</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/BarBackground</item>
        <item name="colorPrimary">@color/BarBackground</item>
        <item name="colorPrimaryDark">@color/BarBackground</item>
        <item name="colorAccent">@color/ColorLaunchBackground</item>-->
        <item name="colorPrimary">@color/ColorLaunchBackground</item>
        <item name="colorPrimaryDark">@color/ColorLaunchBackground</item>
        <item name="colorAccent">@color/ColorLaunchBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="rb_banner">
        <item name="android:drawableTop">@drawable/rb_banner_selector</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="white_middle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_middle</item>
    </style>

    <style name="MyTabLayoutTextAppearanceInverse" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PromptDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
